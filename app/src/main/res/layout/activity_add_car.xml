<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_main_background"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbars="horizontal"
    tools:context=".crud.AddCarActivity">


    <TextView
        android:id="@+id/add_car_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Add a car"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/add_car_linear_layout_horizontal_row_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/car_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Car description:"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_car_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_car_linear_layout_horizontal_row_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/is_main_car_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="serif"
            android:text="Is this the main car?"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_car_database_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/style_main_buttons"
            android:text="Add car"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:translationZ="10dp" />

    </LinearLayout>
</LinearLayout>
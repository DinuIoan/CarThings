<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_add_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbars="horizontal"
    tools:context=".crud.AddCarActivity">


    <TextView
        android:id="@+id/add_car_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="Add a car"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_car_description_edit_text"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_description_text_view"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/car_description_text_view"
        android:gravity="center" />

    <TextView
        android:id="@+id/car_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/add_car_text_view"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Car description:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/is_main_car_checkbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/car_description_text_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Is this the main car?"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_car_database_button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"
        android:background="@drawable/style_main_buttons"
        android:text="Add car"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:translationZ="10dp"
        android:layout_below="@+id/is_main_car_checkbox"/>

</RelativeLayout>